{
    "json.schemas": [
        {
            "fileMatch": [
                "/builder/theme/*"
            ],
            "url": "/builder/theme/validate.json"
        }
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Path": "pflake8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/coverage.xml": true
    },
    "cSpell.words": [
        "APPDATA",
        "cmpfiles",
        "codecov",
        "docstrings",
        "Dont",
        "filecmp",
        "icccm",
        "isort",
        "keysyms",
        "libegl",
        "libopengl",
        "libxcb",
        "libxkbcommon",
        "libyaml",
        "linebreak",
        "MEIPASS",
        "pflake",
        "pformat",
        "Pixmaps",
        "pyinstaller",
        "pyproject",
        "pyqt",
        "pyqtdarktheme",
        "pyright",
        "pyside",
        "pytest",
        "pyupgrade",
        "qdarktheme",
        "QLCD",
        "qresource",
        "qtbot",
        "qtpy",
        "randr",
        "RGBA",
        "RRGGBB",
        "RRGGBBAA",
        "secho",
        "shiboken",
        "venv",
        "virtualenvs",
        "xinerama"
    ],
    "python.linting.banditEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black",
    "restructuredtext.confPath": "${workspaceFolder}/docs/source"
}
