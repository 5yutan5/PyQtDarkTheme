{
    "json.schemas": [
        {
            "fileMatch": [
                "/builder/theme/*"
            ],
            "url": "/builder/theme/validate.json"
        }
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Path": "pflake8",
    "cSpell.words": [
        "cmpfiles",
        "filecmp",
        "isort",
        "MEIPASS",
        "pflake",
        "pformat",
        "pyproject",
        "pyside",
        "qdarktheme",
        "qresource",
        "qtpy",
        "RGBA",
        "RRGGBB",
        "RRGGBBAA",
        "secho",
        "shiboken"
    ],
    "markdownlint.config": {
        "list-marker-space": {
            "ul_single": 3,
            "ol_single": 3,
            "ul_multi": 3,
            "ol_multi": 3
        }
    },
    "python.linting.banditEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black"
}
